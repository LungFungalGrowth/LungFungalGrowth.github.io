@article{millerIronindependentInductionFerritin1991,
  title = {Iron-Independent Induction of Ferritin {{H}} Chain by Tumor Necrosis Factor},
  author = {Miller, L. L. and Miller, S. C. and Torti, S. V. and Tsuji, Y. and Torti, F. M.},
  date = {1991-06-01},
