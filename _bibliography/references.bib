@article{vethanayagamRoleNADPHOxidase2011a,
  title = {Role of {{NADPH Oxidase}} versus {{Neutrophil Proteases}} in {{Antimicrobial Host Defense}}},
  author = {Vethanayagam, R. Robert and Almyroudis, Nikolaos G. and Grimm, Melissa J. and Lewandowski, David C. and Pham, Christine T. N. and Blackwell, Timothy S. and Petraitiene, Ruta and Petraitis, Vidmantas and Walsh, Thomas J. and Urban, Constantin F. and Segal, Brahm H.},
