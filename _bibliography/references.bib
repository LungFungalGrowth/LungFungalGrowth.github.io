}

@article{tsujiTumorNecrosisFactoralpha1991,
  title = {Tumor Necrosis Factor-Alpha and Interleukin 1-Alpha Regulate Transferrin Receptor in Human Diploid Fibroblasts. {{Relationship}} to the Induction of Ferritin Heavy Chain},
